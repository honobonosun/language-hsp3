'.source.hsp3':
  editor:
    #tabLength: 2
    #tabType: "soft"
    autoIndentOnPaste: false
    commentStart: '/* '
    commentEnd  : ' */'
    nonWordCharacters: '/\\()"\':,.;<>~!#%^&*|+=[]{}?-â€¦'
    foldEndPattern: '(\\*/|^\\s*(\\}|\\]|\\)))'
    increaseIndentPattern: '(?x)
      ^.*\\{
      | (^\\s*
        repeat
      | for
      | do
      | while
      | \\*)
    '
    decreaseIndentPattern: '(?x)
        ^\\s*\\}
      | loop
      | next
      | until.*
      | wend
    '
